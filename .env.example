# Document Service Configuration
# Copy to .env and adjust as needed.

# Bearer token for API auth. Unset = dev mode (no auth required).
# SERVICE_API_KEY=your-secret-key-here

# Enable debug logging
# DEBUG=false

# Max upload size in bytes (default 50MB)
# MAX_FILE_SIZE=52428800

# Temporary upload directory
# UPLOAD_DIR=/tmp/document_uploads

# Docling service URL. Unset = Docling disabled.
# DOCLING_SERVICE_URL=http://docling:8080

# Docling request timeout in seconds
# DOCLING_TIMEOUT=300

# Verify SSL for Docling calls
# DOCLING_VERIFY_SSL=true

# CORS allowed origins (comma-separated in docker, JSON list in settings)
# CORS_ORIGINS=["http://localhost:3000"]

# PDF triage thresholds
# PDF_BLOCK_THRESHOLD=50
# PDF_IMAGE_THRESHOLD=3
# PDF_PAGES_TO_ANALYZE=3

# Office file size threshold for Docling routing (bytes, default 5MB)
# OFFICE_SIZE_THRESHOLD=5242880
